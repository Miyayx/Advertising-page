
extends layout
append head
  title 影像图片
append style
  mixin stylesheet('./css/video2.css')
  mixin stylesheet('./css/video.css')
  mixin stylesheet('http://blueimp.github.io/Gallery/css/blueimp-gallery.min.css')
  mixin stylesheet('./css/bootstrap-image-gallery.min.css')
append script
  mixin javascript("http://blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js")
  mixin javascript('js/bootstrap-image-gallery.min.js')
block video-bar
  li.active: a(href='#') 影像图片
block page
  .col-md-9.col-md-offset-1#video

