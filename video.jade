    #wall.row-fluid

      .col-md-offset-1#componentWrapper
        h3 天津德艺美总校开学典礼
        .mediaWrapper
          .mediaPreview(style="width:700px; height:380px; display:block;")
            img.col-xs-12(src="./img/news/open-video.jpg")
          .big_play(style="display:block;")
      br
      br

      #blueimp-gallery.blueimp-gallery
        .slides
        h3.title 
        a.prev <
        a.next >
        a.close x
        a.play-pause
        ol.indicator
        .modal.fade
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type="button",aria-hidden="true") &times;
                h4.modal-title
              .modal-body.next
              .modal-footer
                button.btn.btn-default.pull-left.prev(type="button") 
                  i.glyphicon.glyphicon-chevron-left 上一个
                button.btn.btn-primary.next 下一个
                  i.glyphicon.glyphicon-chevron-right


      div
        a(href='../img/news/picture-wall.jpg')
          img.col-xs-12(src='../img/news/picture-wall.jpg')
